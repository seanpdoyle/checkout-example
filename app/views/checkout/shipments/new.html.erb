<%= render("checkout/frame", checkout: checkout) do %>
  <%= form_with(model: checkout) do |form| %>
    <fieldset>
      <legend>
        Shipping Address
      </legend>

      <%= form.fields_for(:shipping_address, checkout.shipping_address) do |address_form| %>
        <%= render("checkout/addresses/form", form: address_form) %>
      <% end %>
    </fieldset>

    <%= form.submit %>
  <% end %>
<% end %>
