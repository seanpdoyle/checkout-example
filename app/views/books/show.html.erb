<section class="
  md:mx-24
  md:my-12
">
  <nav class="
    flex
    flex-row
    items-center
    m-4
    md:my-8
    md:text-lg
    text-sm
  ">
    <%= link_to books_path do %>
      <%= translate(".library") %>
    <% end %>

    <%= inline_svg_tag("icons/chevron-right", class: "
      h-6
      stroke-current
      w-6
    ") %>

    <span>
      <%= book.title %>
    </span>
  </nav>

  <article class="
    gap-4
    grid
    grid-cols-1
    md:gap-6
    md:grid-cols-2
    md:row-gap-24
  ">
    <div class="
      bg-red-100
      flex
      justify-center
      px-8
      py-16
      rounded-lg
    ">
      <%= render("books/cover", caption: book.title) %>
    </div>

    <div class="
      flex
      flex-col
      items-center
      justify-center
    ">
      <h1 class="
        font-semibold
        md:text-4xl
        text-2xl
      ">
        <%= book.title %>
      </h1>

      <p class="
        font-semibold
        md:text-2xl
        text-xl
      ">
        <%= number_to_currency(book.price_in_dollars) %>
      </p>

      <%= form_with(model: [book, book.line_items.build]) do |form| %>
        <%= form.hidden_field(:increment) %>

        <%= form.button(class: "
          bg-red-600
          hover:bg-red-700
          px-4
          py-2
          rounded-full
          text-white
        ") %>
      <% end %>
    </div>

    <div class="
      lg:ml-16
      lg:prose-xl
      m-4
      prose
    ">
      <%= book.description %>
    </div>

    <div class="
      lg:ml-16
      m-4
      md:prose
      prose
      prose-sm
    ">
      <%= book.table_of_contents %>
    </div>
  </article>
</section>
