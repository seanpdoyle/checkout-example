<% size = local_assigns.fetch(:size, [300, 450]) %>
<% width, height = size %>

<%= image_tag(
  (
    if cover.attached?
      cover.variant(resize_and_pad: size)
    else
      "http://via.placeholder.com/#{width}x#{height}"
    end
  ),
  width: width,
  height: height,
  alt: "",
  class: "
    shadow-md
    #{local_assigns[:class]}
  ",
) %>
