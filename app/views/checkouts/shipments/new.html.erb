<% content_for :header do %>
  <%= link_to books_path do %>
    <%= inline_svg_tag("logo", title: translate("layouts.application.brand"), class: "
      h-8
    ") %>
  <% end %>
<% end %>

<section class="
  md:mx-24
  md:my-12
  space-y-4
  md:space-y-8
">
  <nav class="
    flex
    flex-row
    items-center
    md:text-lg
    text-sm
  ">
    <span>
      <%= translate(".checkouts") %>
    </span>

    <%= inline_svg_tag("icons/chevron-right", class: "
      h-6
      stroke-current
      w-6
    ") %>

    <span>
      <%= translate(".shipments") %>
    </span>
  </nav>

  <h1 class="
    font-semibold
    md:text-2xl
  ">
    <%= translate(".title") %>
  </h1>

  <%= form_with(model: shipment, html: {
    class: "
      flex
      flex-col
      items-start
      md:flex-row
    ",
  }) do |form| %>
    <%= form.hidden_field :country %>

    <section class="
      flex-grow
      mb-8
      md:mb-auto
      md:mr-24
      space-y-4
    ">
      <fieldset class="
        flex
        flex-col
        items-stretch
        space-y-2
      ">
        <%= form.label(:name, class: "
          block
        ") %>
        <%= render("text_field", form: form, attribute: :name) %>
        <%= render("errors", form: form, attribute: :name) %>

        <%= form.label(:email, class: "
          block
        ") %>
        <%= render("text_field", form: form, attribute: :email, type: :email) %>
        <%= render("errors", form: form, attribute: :email) %>
      </fieldset>

      <fieldset class="
        flex
        flex-col
        items-stretch
        space-y-2
      ">
        <%= form.label(:line1, class: "
          block
        ") %>
        <%= render("text_field", form: form, attribute: :line1) %>
        <%= render("errors", form: form, attribute: :line1) %>

        <%= form.label(:line2, class: "
          block
        ") %>
        <%= render("text_field", form: form, attribute: :line2) %>
        <%= render("errors", form: form, attribute: :line2) %>

        <%= form.label(:city, class: "
          block
        ") %>
        <%= render("text_field", form: form, attribute: :city) %>
        <%= render("errors", form: form, attribute: :city) %>

        <div class="
          row-gap-2
          col-gap-4
          grid
          grid-cols-2
        ">
          <%= form.label(:state, class: "
            block
          ") %>
          <%= form.label(:postal_code, class: "
            block
          ") %>

          <%= render("text_field", form: form, attribute: :state) %>
          <%= render("text_field", form: form, attribute: :postal_code) %>

          <%= render("errors", form: form, attribute: :state) %>
          <%= render("errors", form: form, attribute: :postal_code) %>
        </div>
      </fieldset>
    </section>

    <section class="
      md:space-y-8
      md:w-2/6
      space-y-4
      w-full
    ">
      <aside class="
        bg-red-100
        md:p-8
        md:space-y-6
        p-4
        rounded-lg
        space-y-2
      ">
        <%= render(shipment.becomes(Order)) %>
      </aside>

      <%= form.button(class: "
        bg-red-600
        hover:bg-red-700
        px-4
        py-2
        rounded-full
        text-center
        text-white
        text-xl
        w-full
      ") %>
    </section>
  <% end %>
</section>
